# BSI Environment Configuration
# Copy to .env and update with your values

# ==================== ENVIRONMENT ====================
NODE_ENV=development
PYTHON_ENV=development
DEBUG=true
LOG_LEVEL=info

# ==================== CLOUDFLARE ====================
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here
CLOUDFLARE_ZONE_ID=your_zone_id_here

# ==================== DATABASE ====================
DATABASE_URL=postgresql://bsi:bsi_dev@localhost:5432/blazesportsintel
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=blazesportsintel
POSTGRES_USER=bsi
POSTGRES_PASSWORD=bsi_dev

# ==================== NEON DATABASE ====================
NEON_DATABASE_URL=postgresql://username:password@host.neon.tech/dbname?sslmode=require
NEON_PROJECT_ID=your_project_id_here
NEON_BRANCH=main

# ==================== REDIS ====================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ==================== MINIO (S3) ====================
MINIO_URL=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_MEDIA=media
MINIO_BUCKET_DATA=analytics
MINIO_BUCKET_BIOMECH=biomechanics

# ==================== SPORTS DATA APIs ====================
SPORTSDATAIO_API_KEY=your_api_key_here
MLB_API_KEY=your_mlb_key_here
NFL_API_KEY=your_nfl_key_here
NBA_API_KEY=your_nba_key_here
NCAA_API_KEY=your_ncaa_key_here

# ==================== AI/ML SERVICES ====================
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
GEMINI_API_KEY=your_gemini_key_here

# ==================== MACHINE LEARNING PIPELINE ====================
# TensorFlow Model Settings
TENSORFLOW_BACKEND=cpu
MODEL_STORAGE_PATH=./models
MODEL_VERSION_PREFIX=v

# ML Training Configuration
ML_BATCH_SIZE=32
ML_EPOCHS=100
ML_VALIDATION_SPLIT=0.2
ML_LEARNING_RATE=0.001
ML_PATIENCE=10
ML_MIN_DELTA=0.001

# Feature Store Settings
FEATURE_STORE_TTL=86400
FEATURE_CACHE_SIZE=10000
ENABLE_FEATURE_DRIFT_DETECTION=true

# Model Retraining Schedule
MODEL_RETRAIN_GAME_OUTCOME=weekly
MODEL_RETRAIN_SEASON_WINS=monthly
MODEL_RETRAIN_PLAYER_PERFORMANCE=daily

# Database for ML Pipeline (use same as main DB)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=blazesportsintel
DB_USER=bsi
DB_PASSWORD=bsi_dev
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=5

# ==================== MONITORING ====================
GRAFANA_USER=admin
GRAFANA_PASSWORD=blazeintel
PROMETHEUS_PORT=9090
SENTRY_DSN=your_sentry_dsn_here

# ==================== APPLICATION ====================
APP_NAME=BSI - Blaze Sports Intelligence
APP_URL=http://localhost:8000
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
WRANGLER_URL=http://localhost:8787

# ==================== SECURITY ====================
JWT_SECRET=your_jwt_secret_here_change_in_production
SESSION_SECRET=your_session_secret_here_change_in_production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8787

# ==================== EMAIL ====================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@blazesportsintel.com

# ==================== FEATURES ====================
ENABLE_BIOMECHANICS=true
ENABLE_MONTE_CARLO=true
ENABLE_REAL_TIME=true
ENABLE_3D_VISUALIZATION=true

# ==================== PERFORMANCE ====================
WORKER_THREADS=4
MAX_UPLOAD_SIZE=100MB
CACHE_TTL=3600
RATE_LIMIT_PER_MINUTE=100

# ==================== DEVELOPMENT ====================
HOT_RELOAD=true
MOCK_EXTERNAL_APIS=true
VERBOSE_LOGGING=false
PROFILE_PERFORMANCE=false